<div class="container">
  <div class="row justify-content-center">
    <h1>List of available departments</h1>
  </div>
  <%if(departments.length==0){%>
  <h1 style="text-align: center">No added departemtns</h1>
  <%}else{%>
  <div class="">
    <ol>
      <% departments.forEach(function(department){ %>
      <div class="">
        
        <div><%= department.departmentName %></div>
        
        <% if(department.isActive==true){ %>
          <input type="checkbox" class="form-check-input" name="isActive" id="isActive" checked >
        <% }else{ %>
          <input type="checkbox" class="form-check-input" name="isActive" id="isActive" >
        <% } %>
      </div>
      
      <% }); %>
    </ol>
  </div>
  <%}%>
  <div class="d-flex justify-content-center">
    <a href="/addDepartment" class="btn btn-primary">Add new Department</a>
    <form action="/saveDeps" method="POST"></form>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>
</div>

<% include partials/footer %>
